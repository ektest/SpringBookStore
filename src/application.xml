<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN"  
            "http://www.springframework.org/dtd/spring-beans-2.0.dtd">
<beans>
	<bean id="dataSource" class="org.apache.commons.dbcp.BasicDataSource" destroy-method="close">
		<property name="driverClassName" value="org.hsqldb.jdbcDriver" />
		<property name="url" value="jdbc:hsqldb:file:database.dat;shutdown=true" />
		<property name="username" value="sa" />
		<property name="password" value="" />
		<property name="initialSize" value="2" />
		<property name="maxActive" value="8" />
		<property name="maxIdle" value="8" />
		<property name="minIdle" value="2" />
		<property name="testOnBorrow" value="false" />
		<property name="testOnReturn" value="false" />
		<property name="testWhileIdle" value="true" />
		<property name="timeBetweenEvictionRunsMillis" value="30000" />
		<property name="numTestsPerEvictionRun" value="3" />
		<property name="minEvictableIdleTimeMillis" value="60000" />
	</bean>
	<!--
	<bean id="dataSourceSimple" class="org.springframework.jdbc.datasource.SimpleDriverDataSource">
	 	<property name="driverClass" value="org.hsqldb.jdbcDriver"/>
	 	<property name="url" value="jdbc:hsqldb:file:database.dat;shutdown=true"/>
	 	<property name="username" value="sa"/>
	 	<property name="password" value=""/>
	</bean>
	-->
	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
	 	<constructor-arg ref="dataSource"/>
	</bean>
	<bean id="bookDao" class="com.emrekoca.avalon.data.BookDaoCleanerJdbcImpl" init-method="createTables">
	 	<constructor-arg ref="jdbcTemplate" />
	</bean>
	<bean id="bookDaoOld" class="com.emrekoca.avalon.data.BookDaoHorridJdbcImpl"></bean>
	<bean id="accountsService" class="com.emrekoca.avalon.services.AccountsServiceMockImpl" />
	<bean id="bookService2" class="com.emrekoca.avalon.services.BookServiceMockImpl" />
	<!-- Wiring via constructor -->
	<bean id="purchasingService"
		class="com.emrekoca.avalon.services.PurchasingServiceImpl">
		<constructor-arg ref="bookServiceTarget" />
		<constructor-arg ref="accountsService" />
		<!-- 
		If we have same type object more than one
		then we need to use index to tell (variable name) position of arguments
		"ref" refers to bean id not property name
		<constructor-arg index="1" ref="bookService" />
		<constructor-arg index="2" ref="bookService" />
		<constructor-arg index="0" ref="accountsService" />
		<constructor-arg index="3" ref="accountsService" />
		 -->
	</bean>
	<!-- Wiring via property and as well as lazy-init and stateful-bean-->
	<!--
	<bean id="purchasingService" class="com.emrekoca.avalon.services.PurchasingServiceImpl"
		lazy-init="true"
		scope="prototype">
		<property name="bookService" ref="bookService" />
		<property name="accountService" ref="accountsService" />
	</bean>
	-->
	<!-- Using proxy desing pattern -->
	<!-- Target -->
	<bean id="bookServiceTarget" class="com.emrekoca.avalon.services.BookServiceProductionImpl" >
	 	<constructor-arg ref="bookDao"/>
	</bean>
	<!-- Timing Bean / Proxy -->
	<!--
	<bean id="bookServiceProxy" class="com.emrekoca.avalon.services.BookServiceTimingProxy">
		<property name="originalBookService" ref="bookService"/>
	</bean>
	-->
	
	<!-- Using Spring AOP -->
	<!-- Advice -->
	<bean id="loggingAdvice" class="com.emrekoca.avalon.advice.PerformTimingAdvice"/>
	<!-- Spring Generated Proxy -->
	<bean id="bookService" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="proxyInterfaces" value="com.emrekoca.avalon.services.BookService"/>
		<property name="interceptorNames">
			<list>
				<value>loggingAdvice</value>
			</list>
		</property>
		<!-- target -->
		<property name="target" ref="bookServiceTarget"/>
	</bean>
</beans>